<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
  </head>
  <body>
    <div class='container-fluid container-style'>
      <h1>Productos</h1>
      {{#if interruptor}}
        <table class='table table-dark table-striped'>
          <tr>
            <th scope='col'>Nombre</th>
            <th scope='col'>Precio</th>
            <th scope='col'>Foto</th>
          </tr>
          {{#each productos}}
            <tr>
              <td>{{this.title}}</td>
              <td>${{this.price}}</td>
              <td><img src={{this.thumbnail}} width='100px;' /></td>
            </tr>
          {{/each}}
        </table>
      {{else}}
        <div class='alert alert-warning' role='alert'>
          No hay Productos
        </div>
      {{/if}}
      <div class='mb-3' class='col-md-5'>
        <a href='/'><button type='button' class='btn btn-primary'>Ingresar nuevo producto</button></a>
      </div>
    </div>
  </body>
</html>