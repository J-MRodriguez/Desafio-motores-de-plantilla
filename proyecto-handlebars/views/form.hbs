<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
      crossorigin='anonymous'
    />
    <title>Document</title>
  </head>
  <body>
    <div class='container-fluid container-style'>
      <h1>Ingrese Producto</h1>
      <br />
      <form action='/productos' method='post' class='col-md-5'>
        <div class='mb-3'>
          <label for='formInput1' class='form-label'>Nombre</label>
          <input type='text' class='form-control' id='formInput1' placeholder='Nombre' name='title' />
        </div>
        <div class='mb-3'>
          <label for='formInput2' class='form-label'>Precio</label>
          <input type='number' class='form-control' id='formInput2' placeholder='Precio' name='price' />
        </div>
        <div class='mb-3'>
          <label for='formInput3' class='form-label'>Foto URL</label>
          <input type='text' class='form-control' id='formInput3' placeholder='Foto URL' name='thumbnail' />
        </div>
        <br />
        <input type='submit' class='btn btn-success' />
      </form>
      <div class='mb-3' class='col-md-5'>
        <a href='/productos'> <button type='button' class='btn btn-primary'>Mostrar lista de libros</button> </a>
      </div>
    </div>
  </body>
</html>