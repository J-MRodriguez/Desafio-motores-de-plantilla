html
    head    
        title="Pug"
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
            crossorigin='anonymous')
        style
            include styles.css
    body
        div(class='container-fluid container-style')
            h1="Ingrese Producto"
            br 
            form(action="/productos" method="post"  class='col-md-5')
                div(class='mb-3') 
                    label(for="formInput1" class='form-label')="Nombre" 
                    input(type="text" name="title" id="formInput1" class='form-control' placeholder='Nombre') 
                div(class='mb-3') 
                    label(for="formInput2" class='form-label' )="Precio" 
                    input(type="text" name="price" id="formInput2" class='form-control' placeholder='Precio') 
                div(class='mb-3') 
                    label(for="formInput3" class='form-label' )="Foto URL" 
                    input(type="text" name="thumbnail" id="formInput3" class='form-control' placeholder='Foto URL') 
                br
                input(type='submit' class='btn btn-success')
            div(class='mb-3' class='col-md-5')
                a(href="/productos")
                    button(type='button' class='btn btn-primary')="Mostrar lista de libros" 