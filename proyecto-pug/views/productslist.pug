html
    head    
        title="Pug"
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css'
            rel='stylesheet'
            integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx'
            crossorigin='anonymous')
        style
            include styles.css
    body
        div(class='container-fluid container-style')
            h1="Productos"
            if(interruptor)
                table(class='table table-dark table-striped')
                    tr
                        th(scope='col')="Nombre"
                        th(scope='col')="Precio"
                        th(scope='col')="Foto"
                    each producto in productos
                        tr
                            td= producto.title
                            td= producto.price
                            td
                                img(src=producto.thumbnail width='100px;')
            else
                div(class='alert alert-warning' role='alert')="No hay productos" 
            div(class='mb-3' class='col-md-5')
                a(href="/")
                    button(type='button' class='btn btn-primary')="Ingresar nuevo libro" 
