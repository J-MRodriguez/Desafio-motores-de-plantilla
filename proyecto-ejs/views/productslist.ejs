<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./public/styles.css" />
    <title>Document</title>
  </head>
  <body>
    <div class="container-fluid container-style">
      <h1>Productos</h1>
      <% if (interruptor) {%>
      <table class="table table-dark table-striped">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Foto</th>
        </tr>
        <% productos.forEach((producto) => { %>
        <tr>
          <td><%= producto.title %></td>
          <td><%= producto.price %></td>
          <td><img src="<%= producto.thumbnail %>" width="100px;" /></td>
        </tr>
        <% }) %>
      </table>
      <% } else { %>
      <div class="alert alert-warning" role="alert">No hay Productos</div>
      <% } %>
      <div class="mb-3" class="col-md-5">
        <a href="/"><button type="button" class="btn btn-primary">Ingresar nuevo producto</button></a>
      </div>
    </div>
  </body>
</html>
